#!/bin/sh
set -e

# Lint and format staged files
pnpm lint:staged

# Run workspace-wide checks (knip)
# Temporarily disabled knip check for DSL development
# pnpm run check:workspace

# Build all packages
pnpm build

# Run tests for uncommitted changes
pnpm test:uncommitted

# Generate API reports
pnpm generate:api-report

# Generate documentation
pnpm generate:docs
