{
  "name": "@api-extractor-tools/change-detector-core",
  "version": "0.1.0-alpha.1",
  "description": "Isomorphic core for detecting changes between TypeScript declaration files (browser + Node.js)",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "pnpm check:eslint && pnpm check:typecheck-tests",
    "check:eslint": "eslint src test",
    "check:typecheck-tests": "tsc -p test/tsconfig.json"
  },
  "keywords": [
    "typescript",
    "api",
    "semver",
    "change-detection",
    "isomorphic"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@microsoft/tsdoc": "^0.16.0",
    "@typescript-eslint/typescript-estree": "^8.49.0",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.15",
    "vitest": "^4.0.15",
    "zod": "^4.1.13"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./ast": {
      "types": "./dist/esm/ast/index.d.ts",
      "import": "./dist/esm/ast/index.js",
      "require": "./dist/cjs/ast/index.js"
    },
    "./rules": {
      "types": "./dist/esm/rules.d.ts",
      "import": "./dist/esm/rules.js",
      "require": "./dist/cjs/rules.js"
    },
    "./plugins": {
      "types": "./dist/esm/plugins.d.ts",
      "import": "./dist/esm/plugins.js",
      "require": "./dist/cjs/plugins.js"
    }
  },
  "typesVersions": {
    "*": {
      "ast": [
        "./dist/esm/ast/index.d.ts"
      ],
      "rules": [
        "./dist/esm/rules.d.ts"
      ],
      "plugins": [
        "./dist/esm/plugins.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ]
}
