{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "..",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "paths": {
      "@": ["../src/index.ts"],
      "@/*": ["../src/*"]
    }
  },
  "include": ["../src/**/*.ts", "**/*.ts"]
}
