{
  "name": "api-extractor-tools",
  "version": "0.0.1",
  "description": "Tools for working with API Extractor",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint:staged": "lint-staged",
    "clean:packages": "NX_TUI=false nx run-many -t clean --parallel",
    "clean:workspace": "rm -rf temp && rm -rf docs && rm -rf api-reports",
    "clean": "pnpm clean:packages && pnpm clean:workspace",
    "build": "NX_TUI=false nx run-many -t build --exclude api-extractor-tools --parallel",
    "generate:api-report": "NX_TUI=false nx run-many -t generate:api-report --exclude api-extractor-tools --parallel",
    "generate:docs": "NX_TUI=false nx api-documenter",
    "test": "NX_TUI=false nx run-many -t test --exclude api-extractor-tools --parallel",
    "test:coverage": "NX_TUI=false nx run-many -t test:coverage --exclude api-extractor-tools --parallel",
    "test:changed": "pnpm vitest run --root tools/change-detector --config vitest.config.mts --changed HEAD~1 --passWithNoTests && pnpm vitest run --root tools/module-declaration-merger --config vitest.config.mts --changed HEAD~1 --passWithNoTests && pnpm vitest run --root tools/changeset-change-detector --config vitest.config.mts --changed HEAD~1 --passWithNoTests",
    "test:uncommitted": "pnpm vitest run --root tools/change-detector --config vitest.config.mts --changed --passWithNoTests && pnpm vitest run --root tools/module-declaration-merger --config vitest.config.mts --changed --passWithNoTests && pnpm vitest run --root tools/changeset-change-detector --config vitest.config.mts --changed --passWithNoTests",
    "check:packages": "NX_TUI=false nx run-many -t check:eslint,check:typecheck-tests,check:api-report --parallel",
    "check:workspace": "NX_TUI=false nx knip",
    "check:markdown": "markdownlint-cli2 \"**/*.md\"",
    "check": "pnpm check:packages && pnpm check:workspace",
    "fix": "NX_TUI=false nx run-many -t fix:lint,fix:format --parallel",
    "fix:markdown": "markdownlint-cli2 --fix \"**/*.md\"",
    "changeset": "changeset",
    "changeset:auto": "changeset-change-detector generate",
    "changeset:validate": "changeset-change-detector validate",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [],
  "author": "Mike North <michael.l.north@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "nx": {
    "targets": {
      "knip": {
        "cache": true,
        "command": "knip",
        "inputs": [
          "{workspaceRoot}/**/*.{js,ts,json,md,mts,cts,mjs,cjs}"
        ]
      },
      "fix:lint": {
        "cache": true,
        "command": "eslint --fix \"**/*.{js,ts,json,md,mts,cts,mjs,cjs}\"",
        "inputs": [
          "{workspaceRoot}/**/*.{js,ts,json,md,mts,cts,mjs,cjs}"
        ]
      },
      "fix:format": {
        "cache": true,
        "command": "prettier --write \"**/*.{js,ts,json,md,mts,cts,mjs,cjs}\"",
        "inputs": [
          "{workspaceRoot}/**/*.{js,ts,json,md,mts,cts,mjs,cjs}"
        ]
      },
      "api-documenter": {
        "cache": true,
        "command": "api-documenter markdown --input-folder temp --output-folder docs",
        "dependsOn": [
          {
            "projects": "@api-extractor-tools/*",
            "target": "generate:api-report"
          }
        ],
        "inputs": [
          "{workspaceRoot}/temp/**/*.api.json"
        ],
        "outputs": [
          "{workspaceRoot}/docs/**/*.md"
        ]
      }
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@microsoft/api-documenter": "^7.28.2",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "knip": "^5.71.0",
    "lint-staged": "^15.5.2",
    "markdownlint-cli2": "^0.20.0",
    "nx": "^22.1.3",
    "prettier": "^3.7.4",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
