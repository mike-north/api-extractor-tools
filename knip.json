{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "ignoreBinaries": ["changeset-change-detector"],
      "ignoreDependencies": ["@vitest/coverage-v8", "@commitlint/types"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "lib/*": {
      "entry": ["src/index.ts"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/change-detector-semantic-release-plugin": {
      "ignoreDependencies": ["semantic-release"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/demo-site": {
      "entry": ["src/main.tsx", "src/App.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/change-detector-core": {
      "entry": [
        "src/index.ts",
        "src/ast/index.ts",
        "src/rules.ts",
        "src/plugins.ts"
      ],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/*": {
      "entry": ["src/index.ts"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    }
  }
}
