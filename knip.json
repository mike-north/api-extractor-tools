{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "ignoreBinaries": ["changeset-change-detector"],
      "ignoreDependencies": ["@vitest/coverage-v8"]
    },
    "lib/*": {
      "entry": ["src/index.ts"],
      "paths": {
        "@": ["./src/index.ts"]
      }
    },
    "tools/*": {
      "entry": ["src/index.ts"],
      "paths": {
        "@": ["./src/index.ts"]
      },
      "ignoreDependencies": ["semantic-release"]
    },
    "tools/demo-site": {
      "entry": ["src/main.tsx", "src/App.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  }
}
