{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "ignoreBinaries": [
        "changeset-change-detector",
        "declaration-file-normalizer",
        "tsd",
        "api-extractor"
      ],
      "ignoreDependencies": ["@vitest/coverage-v8", "@commitlint/types"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/change-detector-core": {
      "entry": [
        "src/index.ts",
        "src/ast/index.ts",
        "src/rules.ts",
        "src/plugins.ts",
        "test/**/*.test-d.ts",
        "test/**/*.test.ts"
      ],
      "ignoreDependencies": ["@microsoft/api-extractor"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "lib/*": {
      "entry": ["src/index.ts"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/change-detector": {
      "ignoreDependencies": [
        "@api-extractor-tools/declaration-file-normalizer"
      ],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/change-detector-semantic-release-plugin": {
      "ignoreDependencies": [
        "semantic-release",
        "@api-extractor-tools/declaration-file-normalizer"
      ],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/changeset-change-detector": {
      "entry": ["src/index.ts", "test/**/*.test-d.ts", "test/**/*.test.ts"],
      "ignoreDependencies": [
        "@api-extractor-tools/declaration-file-normalizer",
        "tsd"
      ],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/declaration-file-normalizer": {
      "entry": ["src/index.ts", "test/**/*.test.ts"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/demo-site": {
      "entry": ["src/main.tsx", "src/App.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignoreDependencies": ["path-browserify"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/eslint-plugin": {
      "ignoreDependencies": [
        "@api-extractor-tools/declaration-file-normalizer"
      ],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/module-declaration-merger": {
      "ignoreDependencies": [
        "@api-extractor-tools/declaration-file-normalizer"
      ],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    },
    "tools/*": {
      "entry": ["src/index.ts", "test/**/*.test-d.ts", "test/**/*.test.ts"],
      "paths": {
        "@": ["src/index.ts"],
        "@/*": ["src/*"]
      }
    }
  }
}
