{
  "$schema": "https://nx.dev/nx.schema.json",
  "namedInputs": {
    "source": ["{projectRoot}/src/**/*"],
    "tsConfig": [
      "{projectRoot}/tsconfig.json",
      "{workspaceRoot}/tsconfig.json"
    ],
    "eslintConfig": ["{workspaceRoot}/eslint.config.mts"],
    "apiExtractorConfig": [
      "{projectRoot}/api-extractor.json",
      "{workspaceRoot}/api-extractor-base.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "inputs": ["source", "tsConfig"],
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "cache": true,
      "inputs": [
        "source",
        "tsConfig",
        "{projectRoot}/test/**/*",
        "{projectRoot}/vitest.config.mts"
      ],
      "outputs": []
    },
    "check:eslint": {
      "cache": true,
      "inputs": ["source", "eslintConfig"],
      "outputs": []
    },
    "check:typecheck-tests": {
      "cache": true,
      "inputs": [
        "source",
        "tsConfig",
        "{projectRoot}/test/**/*",
        "{projectRoot}/vitest.config.mts",
        "{projectRoot}/test/tsconfig.json"
      ],
      "outputs": []
    },
    "api-extractor": {
      "cache": true,
      "dependsOn": ["build", "^build"],
      "inputs": ["{projectRoot}/dist/**/*.d.ts", "apiExtractorConfig"],
      "outputs": [
        "{workspaceRoot}/api-reports/{projectName}.api.md",
        "{workspaceRoot}/temp/{projectName}.api.json"
      ]
    }
  }
}
